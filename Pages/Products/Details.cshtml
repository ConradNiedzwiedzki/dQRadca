@page "{id:int}"
@model dQRadca.Pages.Products.DetailsModel

@{
    ViewData["Title"] = Resources.ApplicationTexts.DetailsTitle;
}

<h2>@Resources.ApplicationTexts.DetailsTitle</h2>

<div>
    <h4>@Resources.ApplicationTexts.Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Product.CreatedDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.CreatedDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Product.UrlString)
        </dt>
        <dd>
            <a href="@Html.DisplayFor(model => model.Product.UrlString)">@Html.DisplayFor(model => model.Product.UrlString)</a>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Product.QRCode)
        </dt>
        <dd>
            <img src="data:image/png;base64,@Html.DisplayFor(model => model.Product.QRCode)" height="200" width="200"/>
        </dd>
    </dl>
</div>

<div>
    @if ((await AuthorizationService.AuthorizeAsync(User, Model.Product, ProductOperations.Update)).Succeeded)
    {
        <a asp-page="./Edit" asp-route-id="@Model.Product.ProductId">@Resources.ApplicationTexts.Edit</a>
        <text> | </text>
    }
    <a asp-page="./Index">@Resources.ApplicationTexts.BackToList</a>
</div>
